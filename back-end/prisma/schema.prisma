generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


/* O nome de um model no prisma:
*deve iniciar com letra maiuscula
*deve estar no singular
*/
model Customer {
  id              Int      @id @default(autoincrement())
  name            String   
  ident_document  String   
  bith_date       DateTime? // interrogção significa que o campo é opcional, pode ser valor NULL
  street_name     String
  house_namber    String
  complements     String?
  district        String
  municipality    String
  state           String
  phone           String
  email           String
}

  
